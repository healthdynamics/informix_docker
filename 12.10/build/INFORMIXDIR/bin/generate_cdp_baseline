DATE=$(date +"%Y%m%d%H%M%s")
TMPDIR=/tmp/cdp
mkdir -p $TMPDIR
chown informix:informix $TMPDIR
ontape -s -L 0 -t STDIO > $TMPDIR/$DATE
echo "$DATE" > $INFORMIXDATADIR/baseline
put_file $TMPDIR/$DATE /cdp/$DATE
rm $TMPDIR/$DATE

