BUILDDIR=/tmp/build

install_informix_engine () {
	if [ -e $INFORMIXINITDIR/install.properties ]; then
        	$BUILDDIR/ids_install -f $INFORMIXINITDIR/install.properties -i silent 
	else
        	$BUILDDIR/ids_install -f $BUILDDIR/install.properties -i silent
	fi;
}

set -e

. $BUILDDIR/INFORMIXDIR/etc/all.bashrc

install_informix_engine
